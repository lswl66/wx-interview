swiper{
  height: 220px;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.home{
  background-color: #fafafa;
  min-height: calc(100vh - 220px);
}
.home_title{
  height: 30px;
  line-height: 30px;
  color: #999;
  padding: 6px 10px;
  position: relative;
}
.home_title_right{
  position: absolute;
  right: 10px;
  height: 25px;
  border-bottom: 1px solid #999
}
.home_main_item{
  background-color: #fff;
  position: relative;
  margin-bottom: 10px;
  height: 66px;
}
.home_main_item image{
  display: inline-block;
  padding: 0 12px;
}
.home_main_item_pictur{
  width: 40px;
  height: 40px;
  position: relative;
  top: -5px;
}
.home_main_item_inner{
  display: inline-block;
}
.home_main_item_inner_top{
  padding: 12px 0;
}
.home_main_item_inner_top_label{
  display: inline-block;
}
.home_main_item_inner_top_abstract{
  font-size: 10px;
  color: #999;
  margin-left: 15px;
}
.home_main_item_inner_bottom{
  height: 16px;
  font-size: 12px;
  color: #999;
  padding-bottom: 5px;
}
.home_main_item_icon{
  position: absolute;
  right: 0px;
  top: 25px;
  width: 20px;
  height: 20px;
}