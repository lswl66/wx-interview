/* pages/me/me.wxss */
.user{
  background-color: #fafafa;
  height: 100vh;
}
.user_info{
  background-color: #fff;
  text-align: center;
  padding: 20px 0;
  margin-bottom: 30px;
}
.user_info image{
  margin-bottom: 6px;
  width: 65px;
  height: 65px;
  border-radius: 6px;
}
.user_name{
  color: #ff6464;
  font-weight: 550;
  padding: 10px 10px;
  width: 100px;
  position: relative;
  left: calc(50vw - 60px);
}
.user_about text{
  display: inline-block;
  width: 30px;
  height: 12px;
  line-height: 12px;
  font-size: 10px;
  border-radius: 2px;
  color: #fff;
  background-color: rgb(20, 192, 20);
}
.user_about text:first-child{
  margin-right: 2px;
}
.user_record{
  background-color: #fff;
  margin: 10px 0 0px;
}
.user_record_item{
  line-height: 25px;
  display: flex;
}
.user_record image{
  display: inline-block;
  position: relative;
  top: 4px;
  margin: 15px 14px 0;
}
.user_record_item view{
  display: inline-block;
  font-size: 16px;
  flex: 1;
  padding: 15px 0;
}
.user_record view:first-child view{
  border-bottom: 1rpx solid rgba(0,0,0,.1);
}
.contactus{
  margin: 0;
  text-align: left;
  background-color: transparent;
  padding: 0;
}
.contactus::after{
  border: none;
}
